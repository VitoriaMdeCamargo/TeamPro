@model IEnumerable<TeamPro.Models.Partida>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataHora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estadio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipe.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataHora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estadio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipe.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PartidaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PartidaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PartidaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
